{
  "manifest_version": 3,
  "name": "LinkedIn AI Copilot",
  "version": "1.0",
  "description": "AI-powered Content Copilot for LinkedIn.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/documentation.html", "popup/onboarding-modal.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*"
  ],
  "action": {
    "default_title": "AI Sales Copilot"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}