{
  "manifest_version": 3,
  "name": "AI Copilot for LinkedIn",
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "version": "2.0",
  "description": "AI-powered LinkedIn assistant for sales outreach, content creation & job applications. Get 200K free credits!",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/documentation.html", "popup/onboarding-modal.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*"
  ],
  "action": {
    "default_title": "AI LinkedIn Copilot",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}